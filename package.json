{
  "name": "orchestrator-engine",
  "version": "1.0.21",
  "description": "A modular, config-driven Orchestrator Engine for multi-provider AI orchestration and reasoning.",
  "keywords": [
    "orchestrator",
    "engine",
    "ai",
    "agents",
    "mcp",
    "multicloud",
    "serverless"
  ],
  "homepage": "https://github.com/tonynagyeurope/orchestrator-engine#readme",
  "bugs": {
    "url": "https://github.com/tonynagyeurope/orchestrator-engine/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tonynagyeurope/orchestrator-engine.git"
  },
  "license": "MIT",
  "author": "Tony Nagy",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./dist/*": "./dist/*",
    "./dist/profiles/default.json": "./dist/profiles/default.json",
    "./dist/profiles/aws-cli-generator.json": "./dist/profiles/aws-cli-generator.json",
    "./dist/profiles/aws-demo.json": "./dist/profiles/aws-demo.json",
    "./dist/profiles/github.json": "./dist/profiles/github.json"
  },
  "files": [
    "dist/**/*",
    "profiles/"
  ],
  "bin": {
    "oe": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc && node ./scripts/copy-profiles.js && chmod +x dist/src/cli/index.js",
    "rebuild": "rm -rf dist tsconfig.tsbuildinfo && tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "copy-profiles": "node scripts/copy-profiles.js",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "validate:profiles": "node dist/src/cli/index.js --validate-profiles"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.9",
    "c8": "^10.1.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "prettier": "^3.6.2",
    "strip-ansi": "^7.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.941.0",
    "@aws-sdk/client-s3": "^3.934.0",
    "aws-lambda": "^1.0.7",
    "dotenv": "^17.2.3",
    "kleur": "^4.1.5",
    "lambda": "^0.10.3",
    "zod": "^4.1.13"
  }
}
